# ===========================================
# STRATIC PLAN - PRODUCTION ENVIRONMENT
# ===========================================
# IMPORTANT: Replace all placeholder values before deploying
# NEVER commit this file with real credentials

# ===========================================
# SUPABASE CONFIGURATION (Required)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key-here

# ===========================================
# APPLICATION CONFIGURATION (Required)
# ===========================================
NEXT_PUBLIC_APP_URL=https://your-domain.com
NODE_ENV=production

# ===========================================
# DATABASE (For self-hosted Supabase)
# ===========================================
POSTGRES_PASSWORD=changeme-use-strong-password
JWT_SECRET=changeme-use-openssl-rand-base64-32
ANON_KEY=changeme-generate-with-supabase
SERVICE_ROLE_KEY=changeme-generate-with-supabase
REALTIME_SECRET_KEY_BASE=changeme-use-openssl-rand-base64-64

# ===========================================
# REDIS CONFIGURATION (Optional but recommended)
# ===========================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=changeme-use-strong-password

# ===========================================
# EMAIL/SMTP CONFIGURATION (Optional)
# ===========================================
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@your-domain.com

# ===========================================
# AI INTEGRATION (Optional)
# ===========================================
PPLX_API_KEY=pplx-your-api-key-here
PPLX_MODEL=sonar
CLAUDE_API_KEY=sk-ant-your-api-key-here
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# ===========================================
# MONITORING & OBSERVABILITY (Recommended)
# ===========================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_AI=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ===========================================
# SECURITY & PERFORMANCE
# ===========================================
LOG_LEVEL=info
NEXT_TELEMETRY_DISABLED=1
SESSION_DURATION=3600

# ===========================================
# INSTRUCTIONS
# ===========================================
# 1. Generate secure secrets:
#    - JWT_SECRET: openssl rand -base64 32
#    - REALTIME_SECRET_KEY_BASE: openssl rand -base64 64
#    - Passwords: openssl rand -base64 32
# 2. Store secrets in secure vault (AWS Secrets Manager, etc.)
# 3. Set file permissions: chmod 600 .env.production
# 4. Never commit secrets to version control
# 5. Rotate secrets regularly (every 90 days)
